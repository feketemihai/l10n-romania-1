<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<template id="l10n_ro_report_invoice_document" inherit_id="sale.report_saleorder_document">
			<span t-field="doc.partner_id.vat" position="replace">
                <t t-if="doc.partner_id.commercial_partner_id.vat_subjected"><span t-field="doc.partner_id.commercial_partner_id.vat" /></t>
                <t t-if="not doc.partner_id.commercial_partner_id.vat_subjected"><span t-esc="doc.partner_id.commercial_partner_id.vat[2:20]"/></t>
            </span>    
            <p t-if="doc.partner_id.vat" position="after">
                <div t-if="doc.partner_id.nrc" class="mt16">NRC: <span t-field="doc.partner_id.nrc"/></div>
                <div t-foreach="doc.partner_id.commercial_partner_id.bank_ids" t-as="bank" id="partner_bank">
                    <t t-if="bank.print_report">
                        <div t-if="bank.bank_name">
                            <strong>Bank:</strong>
                            <span t-field="bank.bank_name" />
                        </div>
                        <div t-if="bank.acc_number">
                            <strong>Account:</strong>
                            <span t-field="bank.acc_number" /> - <strong t-if="bank.currency_id"> <span t-field="bank.currency_id" /></strong>
                        </div>
                    </t>
                </div>
            </p>
            <xpath expr="//table/thead/tr/th[4]" position="replace">
				<th class="text-right">Subtotal</th>
			</xpath>
			<xpath expr="//table/thead/tr/th[5]" position="replace">
				<th class="text-right">Taxes</th>
			</xpath>
			<xpath expr="//table/thead/tr/th[6]" position="replace">
				<th class="text-right">Total</th>
			</xpath>

			<xpath expr="//table/tbody[@class='sale_tbody']/t/t[2]/tr/td[3]/span" position="replace">
				<span t-field="l.price_reduce_taxexcl" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
			</xpath>
            <xpath expr="//table/tbody[@class='sale_tbody']/t/t[2]/tr/td[4]" position="replace"/>
			<xpath expr="//table/tbody[@class='sale_tbody']/t/t[2]/tr/td[4]" position="replace">
				<td class="text-right">
                    <span t-field="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                </td>
			</xpath>
			<xpath expr="//table/tbody[@class='sale_tbody']/t/t[2]/tr/td[5]" position="replace">
				<td class="text-right">
                    <span t-field="l.price_tax" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                </td>
			</xpath>
            <xpath expr="//table/tbody[@class='sale_tbody']/t/t[2]/tr/td[6]" position="replace">
				<td class="text-right">
                    <span t-field="l.price_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                </td>
			</xpath>
		</template>
        
        <template id="sale.report_invoice_layouted" inherit_id="l10n_ro_invoice_report.l10n_ro_report_invoice_document"/>

	</data>
</odoo>
